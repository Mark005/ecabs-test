<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1655997507106-1" author="Mark">
        <createSequence incrementBy="1" sequenceName="hibernate_sequence" startValue="1"/>
    </changeSet>
    <changeSet id="1655997507106-2" author="Mark">
        <createTable tableName="booking">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_booking"/>
            </column>
            <column name="passenger_name" type="VARCHAR(255)"/>
            <column name="passenger_contact_number" type="VARCHAR(255)"/>
            <column name="pickup_time" type="DATETIME"/>
            <column name="asap" type="BOOLEAN"/>
            <column name="waiting_time" type="INT"/>
            <column name="number_of_passengers" type="INT"/>
            <column name="price" type="DECIMAL"/>
            <column name="rating" type="INT"/>
            <column name="created_on" type="DATETIME"/>
            <column name="last_modified_on" type="DATETIME"/>
        </createTable>
    </changeSet>
    <changeSet id="1655997507106-3" author="Mark">
        <createTable tableName="trip_waypoint">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_trip_waypoint"/>
            </column>
            <column name="locality" type="VARCHAR(255)"/>
            <column name="latitude" type="DOUBLE"/>
            <column name="longitude" type="DOUBLE"/>
            <column name="booking_id" type="UUID"/>
        </createTable>
    </changeSet>
    <changeSet id="1655997507106-4" author="Mark">
        <addForeignKeyConstraint baseColumnNames="booking_id" baseTableName="trip_waypoint"
                                 constraintName="FK_TRIP_WAYPOINT_ON_BOOKING" referencedColumnNames="id"
                                 referencedTableName="booking"/>
    </changeSet>

</databaseChangeLog>